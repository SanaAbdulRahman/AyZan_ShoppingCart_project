<section>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-6 " style="margin-left: 200px;">
                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                    <h2>Edit Product</h2>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input type="" class="form-control" id="productName" name="name" aria-describedby="emailHelp"
                            placeholder="" value="{{product.name}}">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Category</label>
                        <input type="" class="form-control" id="pdctcategory" name="category" placeholder="" value="{{product.category}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Price</label>
                        <input type="" class="form-control" id="prctprice" name="price" placeholder="" value="{{product.price}}">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Description</label>
                        <input type="" class="form-control" id="prctdescription" name="description" placeholder="" value="{{product.description}}">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlFile1">Image</label>
                       <img src="/product-images/{{product._id}}.jpg" style="width:75px;height:100px" id="imgView">
                        <input type="file" class="form-control-file" id="prctimage" name="image" onchange="viewImg(event)">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
<script>

    function viewImg(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>