 <link rel="stylesheet" href="/stylesheets/style.css">


 <div class="form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        <h3>Welcome !</h3>
                        {{!-- <p>Fill in the data below.</p> --}}
                        <form action="/login" method="post">
                        {{#if loginErr}}
                        <p style="color:red">{{loginErr}}</p>
                        {{/if}}

                            <div class="col-md-12">
                                <input class="form-control" type="email" name="Email" placeholder="E-mail Address" required>
                                 <div class="valid-feedback">Email field is valid!</div>
                                 <div class="invalid-feedback">Email field cannot be blank!</div>
                            </div>
                        
                           <div class="col-md-12">
                              <input class="form-control" type="password" name="Password" placeholder="Password" required>
                               <div class="valid-feedback">Password field is valid!</div>
                               <div class="invalid-feedback">Password field cannot be blank!</div>
                           </div>


                           
                            <div class="form-button mt-3 ml-3" >
                                <button id="submit" type="submit" class="btn btn-primary" style="width: 100px;">Login</button>

                                <a href="/signup" class="ml-5" style="color:sandybrown;text-align:right">New user? Create an account</a>

                            </div>
                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


<script src="/public/javascripts/script.js"></script>